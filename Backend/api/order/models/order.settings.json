{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "product": {
      "model": "product"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "totalPayment": {
      "type": "decimal",
      "required": true
    },
    "idPayment": {
      "type": "string",
      "required": true
    },
    "addressShipping": {
      "type": "json",
      "required": true
    },
    "amount": {
      "type": "integer",
      "required": true
    }
  }
}
