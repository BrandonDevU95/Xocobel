{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "category_retail": {
      "model": "category-retail"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "integer"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "url": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "ingredients": {
      "type": "text"
    },
    "nutrition": {
      "type": "text"
    },
    "galery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "stock": {
      "type": "integer",
      "min": 0
    },
    "popular": {
      "type": "boolean"
    },
    "recommended": {
      "type": "boolean"
    },
    "gift": {
      "type": "boolean"
    }
  }
}
